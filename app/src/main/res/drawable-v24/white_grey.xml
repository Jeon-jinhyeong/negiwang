<?xml version="1.0" encoding="utf-8"?>
<inset
    xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_pressed="true">
            <shape android:shape="rectangle">

                <stroke
                    android:width="2px"
                    android:color="#d8d8d8" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#bbffffff" />
                <stroke
                    android:width="2px"
                    android:color="#d8d8d8" />
            </shape>
        </item>
    </selector>
</inset>